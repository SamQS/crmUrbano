@model IEnumerable<crmUrbano.Models.Catalogo>


@{
    ViewData["Title"] = "Inmuebles";
}
<body>
<main role="main">
 <br>

<h1 class="text-center">DETALLE INMUEBLES</h1>
<hr size="5px" width="10%" align="center" color="#000000"/>
<h2 class="text-center" >Consulta Detalles y Precios</h2>
<hr size="0px" width="10%" align="center" color="#ffffff"/>


<div class="container">
<br>
<br>
<br>
<form class="form-inline">
 <h5 type="text">Buscar: </h5>
  <div class="form-group mx-sm-3 mb-2">
    <label for="searchString" class="sr-only">BUSCAR</label>
    <input  class="form-control" type="text" name="searchString"  placeholder="BUSCAR">
  </div>
</form> 

    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                    <img class="img-responsive" width="310" height="500"
                       src="~/img/@item.ImagenName" alt="@item.ImagenName" 
                       />
                       
                  </div>
                </div>
                <div style="text-align:center;" class="card-body">
                  <h5 class="card-title" style="color:#ffffff;">@Html.DisplayFor(modelItem => item.Direccion)</h5>
                  <hr size="15px" width="50%" align="center" color="#ffffff"/> 
                   <h5 class="card-text" style="color:#ffffff;"> <a class="btn btn-primary"> <i class="icofont-price"></i> $ @Html.DisplayFor(modelItem => item.Price)</a></h5>  
                  <h5 class="card-text" style="color:#ffffff;">@Html.DisplayFor(modelItem => item.Name)</h5>                   
                  <a class="btn btn-primary" asp-action="Add" asp-route-id="@item.ID">Agregar al Carrito</a>
                </div>
              </div>
            </div>
            }
          </div>
        </div>
      </div>
  </div>
</div>


  </main>
  </body>