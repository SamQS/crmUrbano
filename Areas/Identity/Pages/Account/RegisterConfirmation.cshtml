@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmaciion de Registro";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    
Normalmente esto sería enviado por correo electrónico: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Haga clic aquí para confirmar su cuenta</a>
</p>
    }
    else
    {
<p>
       
Por favor revise su correo electrónico para confirmar su cuenta.
</p>
    }
}
